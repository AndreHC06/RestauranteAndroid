<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProyectoRestaurante"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".DetallePedido"
            android:label="Detalle de Pedido"
            android:parentActivityName=".InicioMenus"
            android:exported="false" />
        <activity
            android:name=".ConsultarCliente"
            android:exported="false"
            android:parentActivityName=".InicioClientes" />
        <activity
            android:name=".DetallePlatoActivity"
            android:exported="false"
            android:label="Detalle de platillo"
            android:parentActivityName=".IncioPlatosEspeciales"
            android:screenOrientation="portrait" />
        <activity
            android:name=".InicioClientes"
            android:exported="false"
            android:label="Clientes"
            android:parentActivityName=".Inicio"
            android:screenOrientation="portrait" />
        <activity
            android:name=".InicioMenus"
            android:exported="false"
            android:label="Menu"
            android:parentActivityName=".Inicio"
            android:screenOrientation="portrait" />
        <activity
            android:name=".IncioPlatosEspeciales"
            android:exported="false"
            android:label="Platos Especiales"
            android:parentActivityName=".Inicio"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Inicio"
            android:exported="false"
            android:label="Inicio"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ProgressBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>